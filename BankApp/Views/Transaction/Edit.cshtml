@model BankApp.Models.Bank.Transaction

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionID" />
            <div class="form-group">
                <label asp-for="TransactionAmount" class="control-label"></label>
                <input asp-for="TransactionAmount" class="form-control" />
                <span asp-validation-for="TransactionAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionCreationDate" class="control-label"></label>
                <input asp-for="TransactionCreationDate" class="form-control" />
                <span asp-validation-for="TransactionCreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionUpdatedDate" class="control-label"></label>
                <input asp-for="TransactionUpdatedDate" class="form-control" />
                <span asp-validation-for="TransactionUpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionDeletedDate" class="control-label"></label>
                <input asp-for="TransactionDeletedDate" class="form-control" />
                <span asp-validation-for="TransactionDeletedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountID" class="control-label"></label>
                <select asp-for="AccountID" class="form-control" asp-items="ViewBag.AccountName">
                    Select an account
                </select>
                <span asp-validation-for="AccountID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TransactionState" /> @Html.DisplayNameFor(model => model.TransactionState)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
